<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:XTorGame.Views"
             x:Class="XTorGame.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Game Area -->
        <views:GameView x:Name="GameView" 
                        Grid.Row="0"
                        BackgroundColor="Black" />

        <!-- Control Panel -->
        <Grid Grid.Row="1" 
              BackgroundColor="#2C2C2C" 
              Padding="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Movement Controls -->
            <StackLayout Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalOptions="Center">
                <Button x:Name="UpButton" 
                        Text="↑" 
                        WidthRequest="60" 
                        HeightRequest="60"
                        FontSize="24"
                        Pressed="OnUpPressed"
                        Released="OnMoveReleased" />
            </StackLayout>

            <StackLayout Grid.Row="1" Grid.Column="1" Orientation="Horizontal" HorizontalOptions="Center">
                <Button x:Name="LeftButton" 
                        Text="←" 
                        WidthRequest="60" 
                        HeightRequest="60"
                        FontSize="24"
                        Pressed="OnLeftPressed"
                        Released="OnMoveReleased" />
                
                <Button x:Name="DownButton" 
                        Text="↓" 
                        WidthRequest="60" 
                        HeightRequest="60"
                        FontSize="24"
                        Pressed="OnDownPressed"
                        Released="OnMoveReleased"
                        Margin="10,0" />
                
                <Button x:Name="RightButton" 
                        Text="→" 
                        WidthRequest="60" 
                        HeightRequest="60"
                        FontSize="24"
                        Pressed="OnRightPressed"
                        Released="OnMoveReleased" />
            </StackLayout>

            <!-- Fire Button -->
            <Button x:Name="FireButton" 
                    Grid.Row="0" 
                    Grid.RowSpan="2"
                    Grid.Column="2"
                    Text="🔥 FIRE" 
                    FontSize="16"
                    BackgroundColor="#FF4444"
                    TextColor="White"
                    VerticalOptions="Center"
                    HorizontalOptions="End"
                    Clicked="OnFireClicked" />

            <!-- Instructions -->
            <Label Grid.Row="0" 
                   Grid.RowSpan="2"
                   Grid.Column="0" 
                   Text="Move Superman with arrows&#x0a;Fire lasers to kill CHX enemies&#x0a;Avoid CHAUVE enemies (they multiply!)"
                   FontSize="12"
                   TextColor="White"
                   VerticalOptions="Center"
                   HorizontalOptions="Start" />
        </Grid>
    </Grid>

</ContentPage>
